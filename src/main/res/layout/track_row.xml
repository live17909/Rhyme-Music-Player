<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true" android:drawSelectorOnTop="true"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#afd0f1"
        android:id="@+id/mBack"
        android:visibility="invisible"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:drawSelectorOnTop="true"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/song_item_img"
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="?attr/defaultImage"
            android:layout_height="50dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/song_item_img"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/song_item_menu"
            android:layout_toStartOf="@+id/song_item_menu">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:singleLine="true"
                android:textColor="?attr/listItemColor1"
                android:textSize="17sp"
                android:text="New Text"
                android:id="@+id/textView" />
            <TextView
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="New Text"
                android:id="@+id/textView2" />
        </LinearLayout>
        <ImageView
            android:id="@+id/song_item_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:clickable="true"
            android:src="?attr/rowSetting"
            android:theme="@style/Theme.AppCompat"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</FrameLayout>
